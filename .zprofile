# Aliases
alias rr="source ~/.zprofile && source ~/.zshrc"
alias g="git"
alias ls='gls --group-directories-first --color=auto'
alias la="ls -lAh --color=auto"
alias c='clear'
alias cp='cp -i'  # Interactive mode before overwriting
alias mv='mv -i'  # Interactive mode before overwriting
alias rm='rm -i'  # Interactive mode before deletion

alias gs='git status'
alias gp='git pull'
alias gpush='git push'
alias ga='git add'
alias gc='git commit -m'
alias gco='git checkout'
alias gcb='git checkout -b'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'


alias v="nvim"

#Set vim mode
bindkey -v